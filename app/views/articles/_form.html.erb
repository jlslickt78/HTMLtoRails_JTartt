<div class="main-content">
  <div class="article-edit">
    <%= form_for(@article) do |f| %>
        <% if @article.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

              <ul>
                <% @article.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :article_title %><br>
          <%= f.text_field :article_title, class:"textbox" %>
        </div>
        <div class="field">
          <%= f.label :article_author %><br>
          <%= f.text_field :article_author, class:"textbox" %>
        </div>
        <div class="field">
          <%= f.label :article_published %><br>
          <%= f.datetime_select :article_published, class:"dropdown" %>
        </div>
        <div class="field">
          <%= f.label :article_published? %><br>
          <%= f.check_box :article_published?, class:"checkbox" %>
        </div>
        <div class="field">
          <%= f.label :content %><br>
          <%= f.text_area :content, class:"product-textarea"%>
        </div>
        <div class="field">
          <%= f.label :article_avatar %><br>
          <%= f.text_field :article_avatar, class:"textbox" %>
        </div>
        <div class="actions">
          <%= f.submit class:"buttons" %>
        </div>
    <% end %>

  </div>
</div>
