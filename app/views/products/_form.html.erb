<div class="main-content">
  <div class="product-edit">
<%= form_for(@product) do |f| %>
    <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @product.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            <h3 class="fix-errors">Please correct the following errors and try again!</h3>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name, class:"textbox"%>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description, class:"product-textarea"%>
    </div>
    <div class="field">
      <%= f.label :quantity_on_hand %>
      <br>
      <%= f.number_field :quantity_on_hand, class:"textbox" %>
    </div>
    <div class="field">
      <%= f.label :selling_price %>
      <br>
      <%= f.text_field :selling_price, class:"textbox" %>
    </div>
    <div class="field">
      <%= f.label :product_cost %>
      <br>
      <%= f.text_field :product_cost, class:"textbox" %>
    </div>
    <div class="field">
      <%= f.label :shipping_weight %>
      <br>
      <%= f.text_field :shipping_weight, class:"textbox" %>
    </div>
    <div class="field">
      <%= f.label :img_th %>
      <br>
      <%= f.text_field :img_th, class:"textbox" %>
    </div>
    <div class="field">
      <%= f.label :image_full %>
      <br>
      <%= f.text_field :image_full, class:"textbox" %>
    </div>
    <div class="actions">
      <%= f.submit class:"buttons"%>
    </div>
<% end %>
  </div>
</div>

